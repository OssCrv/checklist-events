<div class="col mb-4 btn" style="width: 49.7%;">
    <div class="card bg-light shadow" style="margin:50px 0">
        <div class="card-header">
            <h3 class="text-center"> <%= event.event_name %>
            </h3>

        </div>

        <div class="card-body">

            <div class="column">
                <div class="row mb-4">

                    <form action="/checklist/add/<%= event.id_event %>" method="POST">
                        <div class="input-group input-group-lg">
                            <input type="text" class="form-control" id="recipient-name" name="requirement" placeholder=""
                                aria-label="Example text with button addon">
                            <button type="submit" class="btn btn-secondary btn-lg">AÃ±adir</button>

                        </div>
                    </form>
                </div>


                <div class="column">
                    <% for(let requirement of event.requirements) { %>
                        <li class="list-group-item list-group-item-action">
                            <%= requirement %>
                                <label class="switch"> <input type="checkbox" class="warning"> <!-- default, sucess, info, warning danger -->
                                    <span class="slider"></span>
                                </label>
                        </li>
                    <% } %>
                </div>
            </div>

        </div>

        <div class="card-footer">
            <div class="form-floating">
                <textarea class="form-control" placeholder="Leave a comment here"></textarea>
                <label for="floatingTextarea2">Observaciones</label>
            </div>
        </div>
        
    </div>
</div>